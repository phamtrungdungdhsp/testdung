<section>
        <div class="container">
            <br>
            <br>
            <div class="row">
                <div class="col-lg-8 col-sm-12">
                    <div class="content-area content-single-product">
                        <div class="wrap-one-haft clearfix">
                            <div class="one-haft margin-b-mb-20">
                                <div class="product-images">
                                    <div class="main-img-slider">
                                        <% product.pictures.forEach(picture=>{ %>        
                                            <figure>
                                                <a href="#" data-size="1400x1400">
                                                    <img src="<%-  picture %>"  alt="" />
                                                </a>                                
                                            </figure>
                                        <% }) %>                                    
                                    </div>
                                    <ul class="thumb-nav">
                                        <% product.pictures.forEach(picture=>{ %>        
                                            <li><img src="<%-  picture %>"  alt="product-thumb" /></li>
                                        <% }) %> 
                                    </ul>                         
                                </div>
                            </div><!-- one-haft -->                            
                        
                            <div class="one-haft">
                                <div class="single-product">
                                    <h2><%-  product.name %></h2>
                                    <div class="line-2px-w60 margin-b-20"></div>
                                    <div class="product-detail">
                                        <ul>
                                            <li><div class="product-id"><span>Mã sản phẩm: </span><%-  product.productCode %></div></li>
                                            <li><div class="product-manufacturer"><span>Hãng sản xuất: </span><%-  product.manufacturer %></div></li>
                                            <li><div class="product-trademark"><span>Thương hiệu: </span><%-  product.trademark %></div></li>
                                            <li><div class="product-size"><span>Kích thước: </span><%-  product.size %></div></li>
                                            <li><div class="product-description"><span>Mô tả: </span><%-  product.description %></div></li>
                                        </ul>                                    
                                    </div> 

                                    <div class="box-question-product">
                                        <div class="title">HỎI VỀ SẢN PHẨM</div>
                                        <div class="time"><span>Giờ làm việc: </span>8h30-19h00</div>
                                        <div class="phone"><span>Đặt qua điện thoại: </span>(024) 3733 7366</div>
                                    </div>
                                </div><!-- single-product -->
                            </div><!-- one-haft -->
                        </div><!-- wrap-one-haft -->
                    </div><!-- content-area -->
                    <div class="line-2px"></div>
                    <div class="padding-t-30">
                        <iframe src="https://www.facebook.com/plugins/like.php?href=https%3A%2F%2Fdevelopers.facebook.com%2Fdocs%2Fplugins%2F&width=112&layout=button&action=like&size=small&show_faces=false&share=true&height=65&appId=1920952037972441" width="112" height="65" style="border:none;overflow:hidden" scrolling="no" frameborder="0" allowTransparency="true" allow="encrypted-media"></iframe>
