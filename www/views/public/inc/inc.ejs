<section class="padding-b-30">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumbs">
                    <span class="trail-browse"></span><span class="trail-begin"><a href="/trang-chu.html">Trang chủ</a></span>
                    <span class="sep"><i class="fa fa-angle-right"></i></span><a href="/san-pham.html">Sản phẩm</a>
                    <span class="sep"><i class="fa fa-angle-right"></i></span><a href="/san-pham-con/<%-  menu._id %>.html"><%-  menu.name %></a>
